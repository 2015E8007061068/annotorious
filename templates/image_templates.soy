{namespace yuma.templates}

/**
 * A dummy element to be used for annotation popups later on
 * @param text
 */
{template .popup}
<div class="yuma-popup" style="position:absolute;">
  {$text}
</div>
{/template}


/**
 * The 'Click to Annotate' hint
 * @param msg
 */
{template .hint}
<div class="yuma-hint" style="white-space:nowrap; position:absolute; pointer-events:none; top:10px; left:10px;">
  {$msg}
</div>
{/template}


/**
 * A basic annotation edit text form
 */
{template .editform}
<div style="position:absolute; background-color:white; border:1px solid black;">
  <form>
    <textarea class="annotation-text"></textarea>
    <div>
      <a class="annotation-cancel" href="#cancel">Cancel</a>
      <a class="annotation-save" href="#save">Save</a>
    </div>
  </form>
</div>
{/template}


/**
 * The image annotation canvas template
 * @param width
 * @param height
 */
{template .canvas}
<canvas class="yuma-canvas" style="position:absolute; top:0px; left:0px; width={$width}px; height={$height}px;" width="{$width}" height="{$height}"></canvas>
{/template}
